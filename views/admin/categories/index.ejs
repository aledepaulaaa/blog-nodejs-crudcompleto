<%- include ('../../partials/header') %>
    <%- include ('../../partials/adminnavbar') %>

        <div class="container">
            <h2>Categorias</h2>
            <a class="btn btn-success"  href="/admin/categories/new">Criar nova categoria</a>
            <hr>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Slug</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category=> { %>
                        <tr>
                            <th>
                                <%= category.id %>
                            </th>
                            <th>
                                <%= category.title %>
                            </th>
                            <th>
                                <%= category.slug %>
                            </th>
                            <th>
                                <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
                                <form method="POST" action="/categories/delete" style="display: inline-block; margin: 10px auto;"
                                    onsubmit="confirmarDelete(event, this)">
                                    <input type="hidden" name="id" value="<%= category.id %>">
                                    <button class="btn btn-danger">Excluir</button>
                                </form>
                            </th>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <script>
            function confirmarDelete(event, form) {
                event.preventDefault()
                var decisao = confirm("Deseja deletar esta categoria?")
                if (decisao) {
                    form.submit()
                }
            }
        </script>
        <%- include ('../../partials/footer') %>
        